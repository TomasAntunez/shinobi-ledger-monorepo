{
  "name": "shinobi-ledger",
  "version": "1.0.0",
  "description": "Your Personal CFO",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "install:example": "npm install --workspace=@shinobi-ledger/example",
    "install:scripts": "npm install --workspace=@shinobi-ledger/scripts",
    "install:nest-backend": "npm install --workspace=@shinobi-ledger/nest-backend",
    "install:mobile-app": "npm install --workspace=@shinobi-ledger/mobile-app",
    "build:dev:shared": "npm run build:dev --workspace=@shinobi-ledger/shared",
    "build:prod:nest-backend": "npm run build --workspace=@shinobi-ledger/nest-backend",
    "start:dev:example": "npm run start:dev --workspace=@shinobi-ledger/example",
    "start:dev:local:nest-backend": "npm run start:dev:local --workspace=@shinobi-ledger/nest-backend",
    "start:dev:mobile-app": "npm run start --workspace=@shinobi-ledger/mobile-app",
    "start:dev:mobile-app:ios": "npm run ios --workspace=@shinobi-ledger/mobile-app",
    "start:dev:mobile-app:android": "npm run android --workspace=@shinobi-ledger/mobile-app",
    "create:app:nest": "npm run create:app:nest --workspace=@shinobi-ledger/scripts"
  },
  "author": "Chuli",
  "license": "ISC",
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}
